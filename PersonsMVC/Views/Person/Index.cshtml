@model List<Person>

<h2>List People</h2>

<a href="@Url.Action("CreatePerson", "Person")" class="btn btn-success mb-3">Add Person</a>

@if (Model == null || !Model.Any())
{
    <p>No persons found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Is Graduated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>
                        <a asp-action="PersonDetails" asp-controller="Person" asp-route-id="@person.Id">
                            @person.FirstName
                        </a>
                    </td>
                    <td>@person.LastName</td>
                    <td>@person.Gender</td>
                    <td>@person.DateOfBirth.ToShortDateString()</td>
                    <td>@person.PhoneNumber</td>
                    <td>@person.BirthPlace</td>
                    <td>@(person.IsGraduated ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="EditPerson"
                           asp-route-id="@person.Id"
                           class="btn btn-primary me-2"
                        >
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}