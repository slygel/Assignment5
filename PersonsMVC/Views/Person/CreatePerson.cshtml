@model Person

<div class="container mt-4">
    
    <h2 class="mb-4">Add New Person</h2>

    <form method="post" asp-action="CreatePerson" asp-controller="Person">
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" required/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" required/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select" required
                    asp-items="Html.GetEnumSelectList<GenderType>()">
                <option value="">Select Gender</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" required/>
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" required/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BirthPlace" class="form-label"></label>
            <input asp-for="BirthPlace" class="form-control" required/>
            <span asp-validation-for="BirthPlace" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <input asp-for="IsGraduated" class="form-check-input"/>
            <label asp-for="IsGraduated" class="form-check-label"></label>
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary me-2">Save</button>
            <a asp-action="Index" asp-controller="Person" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>